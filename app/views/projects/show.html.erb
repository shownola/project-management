<p id="notice"><%= notice %></p>

<div class="container new-container">
  
  <h3 class="display-2" align="center"><%= @project.title %></h3>
  <h3 class="display-3"><small>Organization - <%= tenant_name @project.tenant_id %></small></h3>
  <p>
    <strong>Title:</strong>
    <%= @project.title %>
  </p>
  
  <p>
    <strong>Details:</strong>
    <%= @project.details %>
  </p>
  
  <p>
    <strong>Expected completion date:</strong>
    <%= @project.expected_completion_date %>
  </p>
  
  <p>
    <strong>Tenant:</strong>
    <%= tenant_name @project.tenant_id %> | <%= @project.tenant_id %>
  </p>
  
  <h3>Artifacts</h3>
  <%= render 'artifacts/list', artifacts: @project.artifacts %>
  <br />
  
  <%= link_to 'Edit', edit_tenant_project_path(project: @project, tenant: @project.tenant_id), class: 'btn btn-default' %> |
  <%= link_to 'Back to Organization Home', root_path, class: 'btn btn-default' %> |
  <%= link_to 'Edit Project Users', users_tenant_project_path(tenant_id: @project.tenant_id, id: @project.id), class: 'btn btn-default' %> |
  <%= link_to 'Delete', tenant_project_path(@project, @project.tenant_id), method: :delete, data: {confirm: 'Are you sure you want to delete this project?'}, class: 'btn btn-danger' %>
</div>
