

<%= form_for(@artifact, local: true) do |form| %>
  <% if artifact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

      <ul>
      <% artifact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :artifact_name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :upload, value: 'File to upload' %>
    <%= form.file_field :upload, id: :artifact_key, class: 'form-control' %>
  </div>

  <%= form.hidden_field :project_id %>
 
  <!--<div class="field form-group">  # user hidden field in lieu of form group-->
  <!--  <%= form.label :project_id %>-->
  <!--  <%= form.text_field :project_id, id: :artifact_project_id, class: 'form-control' %>-->
  <!--</div>-->

  <div class="actions form-group">
    <%= form.submit class: 'btn btn-default' %>
  </div>
  
  <div>
    <%= link_to 'Cancel', tenant_project_path(tenant_id: Tenant.current_tenant_id, id: @artifact.project_id), class: 'btn btn-default' %>
  </div>
  
<% end %>
